%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @invitation, class:"invite" do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            = f.label :recipient_name, "Friend's Name"
            .row
              .col-sm-4
                = f.text_field :recipient_name
          .form-group
            = f.label :recipient_email, "Friend's Email Address"
            .row
              .col-sm-4
                = f.text_field :recipient_email
          .form-group
            = f.label :message
            .row
              .col-sm-6
              = f.text_area :message, rows:6, placeholder: "Please join this really cool site!"
        %fieldset.form-group.action
          = f.submit "Send Invitation", class:"btn btn-default"
