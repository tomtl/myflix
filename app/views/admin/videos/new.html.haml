%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for([:admin, @video], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-6") do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            = f.text_field :title
            = f.select :category_id, options_for_categories
            = f.text_area :description, rows: 8
            = f.file_field :large_cover_url, class:"btn btn-file"
            = f.file_field :small_cover_url, class:"btn btn-file"
            = f.submit "Add Video", class:"btn btn-default col-md-offset-3 col-sm-6"
